<%= form_with(model: room) do |form| %>
  <% if room.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
        <% room.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
    <div class="field">
      <%= form.label :card_id, "Wybierz kartę" %>
      <%= form.select :card_id, options_for_select(Card.all.map { |card| [card.id] }), prompt: "Wybierz kartę" %>
    </div>
  </div>

  <div>
    <%= button_to "Dodaj pokój", add_room_path(@card, @room), method: :post %>
  </div>
<% end %>
